<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1 p-2">Schedule</h2>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <h3 class="text-center title-2">Add a Schedule</h3>
                            </div>
                            <hr>
                            <form action="/admin/dashboard/schedules" method="POST">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input id="scheduleName" name="scheduleName" type="text"
                                                class="form-control" placeholder="Schedule Name" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <label for="dHour">Departure Time (24 hour format)</label>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <input id="dHour" name="dHour" type="number"
                                                                placeholder="Hour" min="0" max="23" class="form-control"
                                                                required>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <input id="dMinute" name="dMinute" type="number"
                                                                placeholder="Minute" min="0" max="59"
                                                                class="form-control" required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <label for="aHour">Arrival Time (24 hour format)</label>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <input id="aHour" name="aHour" type="number"
                                                                placeholder="Hour" min="0" max="23" class="form-control"
                                                                required>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <input id="aMinute" name="aMinute" type="number"
                                                                placeholder="Minute" min="0" max="59"
                                                                class="form-control" required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <button id="payment-button" type="submit"
                                        class="btn btn-lg btn-info btn-block">ADD</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1 p-2">Data Table</h2>
                    </div>
                </div>
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Timestamp</th>
                                    <th>Schedule Name</th>
                                    <th>Arrival Time</th>
                                    <th>Departure Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data.schedules}}
                                <tr>
                                    <td>{{index}}</td>
                                    <td>{{createdAt}}</td>
                                    <td>{{scheduleName}}</td>
                                    <td>{{arrival}}</td>
                                    <td>{{departure}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Copyright Â© 2020 Nehal Parsekar. All rights reserved.</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>